@using StockManagementSystem.Entities;
@model List<ApplicationUser>
@{
    Layout = "_Layout";
}
<div class="mt-2" style="width:50%">
    <div class="row">
        <p><h3 style="color : brown">User's List'</h3></p>1
        <p>

        </p>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                <tr>
                    <th>Username</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Action</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            <a class="btn btn-success" href="/Admin/Edit?id=@item.Id">Edit</a>
                            <a class="btn btn-danger" href="/Admin/Delete?id=@item.Id">Delete</a>
                            <a class="btn btn-inline" href="/Admin/AssignRole?id=@item.Id">AssignRole</a>
                        </td>
                    </tr>
                }
            </thead>
            </table>
            </div>
    </div>
    <a class="btn btn-outline-primary" style="display: inline" href="@Url.Action("DownloadCsv", "Category")"><b>Dawonload</b></a>
</div>


